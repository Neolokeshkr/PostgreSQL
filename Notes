CREATE TABLE reassignment_history (
	ser_id serial PRIMARY KEY,
	req_stage VARCHAR ( 100 ) NOT NULL,
	reassigned_by VARCHAR ( 255 ) NOT NULL,
	reassigned_to VARCHAR ( 255 ) NOT NULL,
	reassigned_date TIMESTAMP NOT NULL
);

